<h1><%= @shoe.name() %></h1>

<h3>Select all stores that has this shoe in stock:</h3>

<% if @stores.any?() %>
  <form action='/shoes/<%= @shoe.id %>' method='post'>
    <input type='hidden' name='_method' value='patch'>

    <% @stores.each() do |store| %>
      <div class='checkbox'>
        <label>
          <input type='checkbox' name='store_ids[]' value='<%= store.id() %>'><%= store.name() %>
        </label>
      </div>
    <% end %>

    <button type='submit'>Add stores</button>
  </form>
<% end %>

<% if @shoe.stores().any?() %>
  <h3>Here are all the stores with this shoe in stock:</h3>

  <ul>
    <% @shoe.stores().each() do |store| %>
      <li><%= store.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no stores yet!</p>
  <% end %>

<a href='/'>Return to Main Page</a>
